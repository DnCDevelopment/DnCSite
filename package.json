{
	"name": "nodeart",
	"description": "nodeart",
	"version": "1.0.0",
	"private": true,
	"author": "@nodeart",
	"keywords": [
		"gatsby"
	],
	"license": "MIT",
	"main": "n/a",
	"scripts": {
		"build": "gatsby build",
		"clean": "rimraf public",
		"deploy": "gatsby build --prefix-paths && gh-pages -d public",
		"dev": "gatsby develop",
		"format": "prettier --write \"src/**/*.{ts,tsx,md}\"",
		"lint": "eslint 'src/**/*.{ts,tsx}'",
		"start": "npm run dev",
		"test": "npm run type-check && npm run lint",
		"type-check": "tsc"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run format",
			"commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^1.2.26",
		"@fortawesome/free-brands-svg-icons": "^5.12.0",
		"@fortawesome/free-solid-svg-icons": "^5.12.0",
		"@fortawesome/react-fontawesome": "^0.1.8",
		"classnames": "^2.2.6",
		"commitlint": "^8.3.5",
		"dotenv": "^8.2.0",
		"gatsby": "^2.19.10",
		"gatsby-image": "^2.2.39",
		"gatsby-plugin-canonical-urls": "^2.1.19",
		"gatsby-plugin-eslint": "^2.0.8",
		"gatsby-plugin-layout": "^1.1.21",
		"gatsby-plugin-prefetch-google-fonts": "^1.4.3",
		"gatsby-plugin-react-helmet": "^3.1.21",
		"gatsby-plugin-react-svg": "^3.0.0",
		"gatsby-plugin-sass": "^2.1.27",
		"gatsby-plugin-sharp": "^2.4.4",
		"gatsby-plugin-typescript": "^2.1.26",
		"gatsby-remark-custom-blocks": "^2.1.24",
		"gatsby-source-filesystem": "^2.1.47",
		"gatsby-source-strapi": "0.0.10",
		"gatsby-transformer-remark": "^2.6.49",
		"gatsby-transformer-sharp": "^2.3.13",
		"husky": "^3.1.0",
		"node-sass": "^4.13.1",
		"nuka-carousel": "^4.6.0",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-fullpage": "^0.1.19",
		"react-helmet": "^5.2.1",
		"react-multi-carousel": "^2.5.0",
		"typescript": "^3.7.5"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.8",
		"@types/node": "^12.12.26",
		"@types/react": "^16.9.19",
		"@types/react-dom": "^16.9.5",
		"@types/react-helmet": "^5.0.15",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"eslint": "^6.8.0",
		"eslint-config-blvd": "^0.1.1",
		"eslint-config-prettier": "^5.0.0",
		"eslint-plugin-prettier": "^3.1.2",
		"gh-pages": "^2.2.0",
		"prettier": "^1.19.1",
		"rimraf": "^2.6.3",
		"stylelint": "^13.1.0",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-declaration-use-variable": "^1.7.2",
		"stylelint-high-performance-animation": "^1.4.0",
		"stylelint-order": "^4.0.0",
		"stylelint-scss": "^3.14.2"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-recommended",
			"stylelint-config-rational-order"
		],
		"plugins": [
			"stylelint-order",
			"stylelint-scss",
			"stylelint-config-rational-order/plugin",
			"stylelint-high-performance-animation",
			"stylelint-declaration-use-variable"
		],
		"rules": {
			"no-empty-source": [
				true,
				{
					"severity": "warning"
				}
			],
			"plugin/no-low-performance-animation-properties": [
				true,
				{
					"severity": "warning"
				}
			],
			"sh-waqar/declaration-use-variable": [
				[
					"/color/",
					"font-size",
					"font-family",
					"font-weight"
				]
			],
			"order/properties-order": [],
			"plugin/rational-order": [
				true,
				{
					"border-in-box-model": false,
					"empty-line-between-groups": false
				}
			],
			"selector-type-no-unknown": [
				true,
				{
					"ignore": [
						"custom-elements"
					]
				}
			],
			"no-descending-specificity": true,
			"at-rule-no-unknown": null,
			"scss/at-rule-no-unknown": true
		}
	}
}
